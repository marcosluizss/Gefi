<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/tv_nome_conta"
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/et_nome_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/tv_tipo_conta"
        android:text="Tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

    <Spinner
        android:id="@+id/sp_tipo_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_banco_conta"
        android:text="Banco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Spinner
        android:id="@+id/sp_banco_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />

    <TextView
        android:id="@+id/tv_agecia_conta"
        android:text="AgÃªncia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/ed_agencia_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
    android:id="@+id/tv_numero_conta"
    android:text="Conta"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />

    <EditText
        android:id="@+id/ed_numero_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_saldo_conta"
        android:text="Saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <EditText
        android:id="@+id/ed_saldo_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_salvar_conta"
            android:text="Salvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bt_cancelar_conta"
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/bt_salvar_conta"
            />

    </RelativeLayout>
</LinearLayout>